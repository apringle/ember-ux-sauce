{{#if hasLabel}}
  {{uxs-form-label label name=name disabled=disabled}}
{{/if}}
{{#if hasTextInput}}
  {{uxs-form-input model=model name=name type=type value=value disabled=disabled}}
{{/if}}
{{#if hasTextArea}}
  {{uxs-form-textarea model=model name=name type=type value=value disabled=disabled}}
{{/if}}

{{yield (hash
  label=(component    "uxs-form-label"        name=name disabled=disabled)
  input=(component    "uxs-form-input"        model=model name=name disabled=disabled value=value)
  textarea=(component "uxs-form-textarea"     model=model name=name disabled=disabled value=value)
  dropdown=(component "uxs-form-dropdown"     model=model name=name disabled=disabled value=value)
  date=(component     "uxs-form-date"         model=model name=name disabled=disabled)
  datetime=(component "uxs-form-datetime"     model=model name=name disabled=disabled inlineInput=inline)
  time=(component     "uxs-form-time"         model=model name=name disabled=disabled inlineInput=inline)
  row=(component      "uxs-form-control-row"  model=model name=name disabled=disabled)
  tip=(component      "uxs-form-tip"          name=name disabled=disabled)
  warning=(component  "uxs-form-warning"      name=name disabled=disabled)
  error=(component    "uxs-form-error"        name=name disabled=disabled)
)}}

{{#if hasTip}}
  {{uxs-form-tip tip name=name disabled=disabled}}
{{/if}}
{{#if hasWarning}}
  {{uxs-form-warning warning name=name disabled=disabled}}
{{/if}}
{{#if hasError}}
  {{uxs-form-error error name=name disabled=disabled}}
{{/if}}
{{#if hasValidationError}}
  {{uxs-form-error
    (v-get model name 'message')
    name=name
    disabled=disabled
  }}
{{/if}}
